<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Gami.Desktop.ViewModels"
             xmlns:models="clr-namespace:Gami.Core.Models;assembly=Gami.Core"
             xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Gami.Desktop.Views.MainView"
             x:DataType="viewModels:MainViewModel"
             x:Name="Root">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <viewModels:MainViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel>
            <DockPanel Width="300" Height="300">
                <StackPanel DockPanel.Dock="Top">
                    <Button Command="{Binding Refresh}">
                        Refresh
                    </Button>
                </StackPanel>
            </DockPanel>
            <Label>Etc</Label>
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <Grid
                    IsVisible="{Binding EditingGame, 
                       Converter={x:Static ObjectConverters.IsNotNull}}"
                    RowDefinitions="*,*,*,*,*,Auto"
                    ColumnDefinitions="Auto, *">
                    <Label Content="Name" />
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding EditingGame.Name}" />

                    <Label Grid.Row="1" Grid.Column="0" Content="Description" />
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Text="{Binding EditingGame.Description}" />
                    <Label Grid.Row="2" Grid.Column="0" Content="Release Date" />

                    <TextBox Grid.Row="2" Grid.Column="1"
                             Text="{Binding EditingGame.ReleaseDate}" />

                    <Label Grid.Row="4" Grid.Column="0" Content="Genres" />

                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                        <ItemsControl ItemsSource="{Binding EditingGame.GameGenres}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:GameGenre">
                                    <Label Content="{Binding Genre.Name}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <Button Content="Save" />
                        <Button Content="Cancel" />

                    </StackPanel>

                </Grid>

                <ItemsControl ItemsSource="{Binding Games}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:Game">
                            <Grid ColumnDefinitions="5*, Auto, *">
                                <Label Content="{Binding Name}" />
                                <Label Grid.Column="1" Content="{Binding InstallStatus}" />
                                <fa:CommandBar Grid.Column="2"
                                               DefaultLabelPosition="Right">
                                    <fa:CommandBar.PrimaryCommands>
                                        <fa:CommandBarButton IconSource="Play"
                                            IsEnabled="{Binding Installed}"
                                            Command="{Binding #Root.((viewModels:MainViewModel)DataContext).PlayGame}"
                                            CommandParameter="{Binding .}"
                                            Label="Play" />
                                        <fa:CommandBarButton IconSource="Add"
                                            Background="Green"
                                            IsEnabled="{Binding !Installed}"
                                            Command="{Binding #Root.((viewModels:MainViewModel)DataContext).InstallGame}"
                                            CommandParameter="{Binding .}"
                                            Label="Install" />
                                        <fa:CommandBarButton IconSource="Delete"
                                            Background="Red"
                                            IsEnabled="{Binding Installed}"
                                            Command="{Binding #Root.((viewModels:MainViewModel)DataContext).UninstallGame}"
                                            CommandParameter="{Binding .}"
                                            Label="Delete" />
                                        <fa:CommandBarButton IconSource="Edit"
                                            Background="Blue"
                                            IsEnabled="{Binding !Installed}"
                                            Command="{Binding #Root.((viewModels:MainViewModel)DataContext).EditGame}"
                                            CommandParameter="{Binding .}" Label="Edit" />

                                    </fa:CommandBar.PrimaryCommands>

                                </fa:CommandBar>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>